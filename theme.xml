<theme>
	<formatVersion>6</formatVersion>
	<resolution>1920 1080</resolution>

	<!-- =========================
	     SYSTEM VIEW
	     ========================= -->
	<view name="system">

		<image name="background" extra="true">
			<path>./layout/dark/wallpaper_system.png</path>
			<size>1920 1080</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
		</image>

		<image name="logo">
			<path>./_inc/logos/${system.theme}.svg</path>
			<maxSize>900 280</maxSize>
			<pos>960 260</pos>
			<origin>0.5 0.5</origin>
		</image>

		<!-- Consola: arriba-izquierda -->
		<image name="console" extra="true">
			<path>./_inc/consoles/${system.theme}.svg</path>
			<pos>40 40</pos>
			<origin>0 0</origin>
			<maxSize>520 260</maxSize>
		</image>

		<!-- Control: arriba-derecha -->
		<image name="controller" extra="true">
			<path>./_inc/controller/${system.theme}.svg</path>
			<pos>1500 40</pos>
			<origin>1 0</origin>
			<maxSize>520 260</maxSize>
		</image>

		<helpsystem name="help">
			<iconColor>7d7d7d</iconColor>
			<textColor>7d7d7d</textColor>
		</helpsystem>

	</view>

	<!-- =========================
	     NAVIGATION SOUNDS
	     ========================= -->
	<feature supported="navigationsounds">
		<view name="all">
			<sound name="systembrowse"><path>./_inc/audio/systembrowse.wav</path></sound>
			<sound name="quicksysselect"><path>./_inc/audio/quicksysselect.wav</path></sound>
			<sound name="select"><path>./_inc/audio/select.wav</path></sound>
			<sound name="back"><path>./_inc/audio/back.wav</path></sound>
			<sound name="scroll"><path>./_inc/audio/scroll.wav</path></sound>
			<sound name="favorite"><path>./_inc/audio/favorite.wav</path></sound>
			<sound name="launch"><path>./_inc/audio/launch.wav</path></sound>
		</view>
	</feature>

	<!-- =========================
	     COMMON (ALL GAMELISTS)
	     ========================= -->
	<view name="basic, detailed, video, grid, automatic">

		<image name="background" extra="true">
			<path>./layout/dark/wallpaper_gamelist.png</path>
			<size>1920 1080</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
		</image>

		<image name="logo">
			<path>./_inc/logos/${system.theme}.svg</path>
			<maxSize>520 120</maxSize>
			<pos>40 40</pos>
			<origin>0 0</origin>
		</image>

	</view>

	<!-- =========================
	     BASIC (LISTA SIMPLE)
	     ========================= -->
	<view name="basic">

		<textlist name="gamelist">
			<fontSize>32</fontSize>
			<forceUppercase>false</forceUppercase>
			<size>820 840</size>
			<pos>40 180</pos>
			<alignment>left</alignment>
			<horizontalMargin>20</horizontalMargin>

			<selectorColor>00000040</selectorColor>
			<selectedColor>3082ce</selectedColor>
			<primaryColor>FFFFFFCC</primaryColor>
			<secondaryColor>FFFFFF66</secondaryColor>
		</textlist>

	</view>

	<!-- =========================
	     DETAILED + VIDEO (metadata compartida)
	     Nota: aqui NO se dibuja md_image para que no aparezca en VIDEO
	     ========================= -->
	<view name="detailed, video">

		<textlist name="gamelist">
			<fontSize>32</fontSize>
			<forceUppercase>false</forceUppercase>
			<size>820 840</size>
			<pos>40 180</pos>
			<alignment>left</alignment>
			<horizontalMargin>20</horizontalMargin>

			<selectorColor>00000040</selectorColor>
			<selectedColor>3082ce</selectedColor>
			<primaryColor>FFFFFFCC</primaryColor>
			<secondaryColor>FFFFFF66</secondaryColor>
		</textlist>

		<!-- Evita duplicados -->
		<image name="md_thumbnail">
			<visible>false</visible>
		</image>

		<!-- IMPORTANTE: md_image NO va aqui (si no, aparece tambien en la vista VIDEO).
		     Lo apagamos por seguridad en este bloque compartido. -->
		<image name="md_image">
			<visible>false</visible>
		</image>

		<!-- ===== METADATA: estilos (habilita y da estilo) ===== -->
		<text name="md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_playcount, md_lbl_lastplayed, md_lbl_rating">
			<fontSize>24</fontSize>
			<forceUppercase>false</forceUppercase>
			<color>3082ce</color>
			<visible>true</visible>
		</text>

		<text name="md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
			<fontSize>24</fontSize>
			<forceUppercase>false</forceUppercase>
			<color>FFFFFFCC</color>
			<visible>true</visible>
		</text>

		<datetime name="md_releasedate, md_lastplayed">
			<fontSize>24</fontSize>
			<forceUppercase>false</forceUppercase>
			<color>FFFFFFCC</color>
			<visible>true</visible>
		</datetime>

		<rating name="md_rating">
			<size>0 26</size>
			<visible>true</visible>
		</rating>

		<!-- ===== METADATA: posiciones ===== -->
		<text name="md_lbl_releasedate"><pos>920 580</pos></text>
		<datetime name="md_releasedate"><pos>1120 568</pos></datetime>

		<text name="md_lbl_genre"><pos>920 612</pos></text>
		<text name="md_genre"><pos>1120 612</pos><size>160 32</size></text>

		<text name="md_lbl_developer"><pos>920 644</pos></text>
		<text name="md_developer"><pos>1120 644</pos><size>760 32</size></text>

		<text name="md_lbl_publisher"><pos>920 676</pos></text>
		<text name="md_publisher"><pos>1120 676</pos><size>760 32</size></text>

		<text name="md_lbl_players"><pos>1400 580</pos></text>
		<text name="md_players"><pos>1600 580</pos><size>280 32</size></text>

		<text name="md_lbl_playcount"><pos>1400 612</pos></text>
		<text name="md_playcount"><pos>1600 612</pos><size>280 32</size></text>

		<text name="md_lbl_lastplayed"><pos>1400 644</pos></text>
		<datetime name="md_lastplayed"><pos>1600 634</pos></datetime>

		<text name="md_lbl_rating"><pos>1400 676</pos></text>
		<rating name="md_rating"><pos>1600 685</pos></rating>

		<!-- Descripcion -->
		<text name="md_description">
			<fontSize>22</fontSize>
			<size>960 260</size>
			<pos>920 720</pos>
			<color>FFFFFFCC</color>
			<visible>true</visible>
		</text>

	</view>

	<!-- =========================
	     DETAILED (solo caratula / imagen)
	     ========================= -->
	<view name="detailed">

		<image name="md_image">
			<pos>920 220</pos>
			<maxSize>960 340</maxSize>
			<origin>0 0</origin>
			<visible>true</visible>
		</image>

		<!-- por si algun sistema trae thumbnail raro -->
		<image name="md_thumbnail">
			<visible>false</visible>
		</image>

	</view>

	<!-- =========================
	     VIDEO (solo el bloque de video)
	     Aqui se apaga md_image para que NO salga caratula si hay video
	     ========================= -->
	<view name="video">

		<!-- Seguridad: si algun merge/tema viejo intenta activar md_image -->
		<image name="md_image"><visible>false</visible></image>
		<image name="md_thumbnail"><visible>false</visible></image>

		<video name="md_video">
			<maxSize>960 340</maxSize>
			<pos>1400 390</pos>
			<origin>0.5 0.5</origin>
			<delay>3</delay>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>true</showSnapshotDelay>
			<visible>true</visible>
		</video>

	</view>

	<!-- =========================
	     AUTOMATIC (alias practico)
	     ========================= -->
	<view name="automatic">
		<image name="md_thumbnail"><visible>false</visible></image>
	</view>

	<!-- =========================
	     GRID
	     ========================= -->
	<view name="grid">

		<image name="background" extra="true">
			<path>./layout/dark/wallpaper_gamelist.png</path>
			<size>1920 1080</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
		</image>

		<imagegrid name="imagegrid">
			<size>1800 840</size>
			<pos>60 180</pos>
			<margin>20 20</margin>
			<scrollDirection>vertical</scrollDirection>
		</imagegrid>

		<gridtile name="default">
			<size>320 262</size>
			<padding>20 20</padding>
			<imageColor>FFFFFF88</imageColor>
			<backgroundColor>00000000</backgroundColor>
		</gridtile>

		<gridtile name="selected">
			<size>320 262</size>
			<padding>0 0</padding>
			<imageColor>FFFFFFFF</imageColor>
			<backgroundColor>00000000</backgroundColor>
		</gridtile>

	</view>

</theme>
